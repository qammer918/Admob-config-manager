<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.mobile.test.application.presentation.views.fragment.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_SplashFragment_to_UserListFragment"
            app:destination="@id/UserListFragment" />

    </fragment>



    <fragment
        android:id="@+id/UserListFragment"
        android:name="com.mobile.test.application.presentation.views.fragment.UserListFragment"
        android:label="Users"
        tools:layout="@layout/fragment_user_list">

        <action
            android:id="@+id/action_userList_to_userForm"
            app:destination="@id/UserFormFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/UserFormFragment"
        android:name="com.mobile.test.application.presentation.views.fragment.UserFormFragment"
        android:label="User Form"
        tools:layout="@layout/fragment_user_form">
        

    </fragment>
</navigation>