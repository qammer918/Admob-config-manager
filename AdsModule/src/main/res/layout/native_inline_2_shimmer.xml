<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="3dp">


    <View
        android:id="@+id/ad_media"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_3sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/shimmer_gray_trans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />


    <TextView
        android:id="@+id/tv_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:backgroundTint="@color/shimmer_gray_trans"
        android:paddingHorizontal="6dp"
        android:paddingVertical="1dp"
        android:text="Ad"
        android:textColor="@color/shimmer_gray_trans"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@id/ad_media"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/ad_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:background="@color/shimmer_gray_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_ad"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/ad_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@color/shimmer_gray_trans"
        app:layout_constraintBottom_toTopOf="@+id/ad_call_to_action_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ad_media"
        app:layout_constraintTop_toBottomOf="@+id/ad_headline" />

    <View
        android:id="@+id/ad_call_to_action_shimmer"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/_2sdp"

        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:background="@color/shimmer_gray_trans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ad_media"
        app:layout_constraintTop_toBottomOf="@id/ad_body" />


</androidx.constraintlayout.widget.ConstraintLayout>

